<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#e8e8e8" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#f9f9f9" />
            <stroke
                android:width="1dp"
                android:color="#f9f9f9" />
        </shape>
    </item>
</layer-list>